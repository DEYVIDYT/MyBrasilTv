<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selection_focus" /> <!-- Pressionado e Selecionado -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selection_focus" /> <!-- Apenas Selecionado -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_dark_surfaceVariant" /> <!-- Apenas Pressionado -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_background" /> <!-- Default -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
</selector>
