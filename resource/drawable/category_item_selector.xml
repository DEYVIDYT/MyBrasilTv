<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryContainer" /> <!-- Pressionado e Selecionado -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryContainer" /> <!-- Apenas Selecionado -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerHighest" /> <!-- Apenas Pressionado -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/colorBackground" /> <!-- Default (fundo da lista de categorias Ã© colorSurfaceContainerLow) -->
            <corners android:topRightRadius="12dp" android:bottomRightRadius="12dp" />
        </shape>
    </item>
</selector>
