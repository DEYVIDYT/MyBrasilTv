<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_dark_surfaceVariant" /> <!-- Cor de fundo quando focado -->
            <stroke android:width="3dp" android:color="@color/selection_focus" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_dark_surfaceVariant" />
            <stroke android:width="3dp" android:color="@color/accent_highlight" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_dark_surface" /> <!-- Cor de fundo padrÃ£o -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
