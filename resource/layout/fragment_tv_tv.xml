<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".TvFragmentTv">

    <!-- Container do Player Principal - Ocupa toda a tela -->
    <FrameLayout
        android:id="@+id/tv_player_container_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- VideoView será adicionado programaticamente aqui pelo TvFragmentTv -->
        <!-- A ProgressBar para o player será gerenciada pelo TvFragmentTv ou pelo VideoController -->
        <ProgressBar
            android:id="@+id/tv_player_progress_bar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:indeterminateTint="@color/selection_focus"/>
    </FrameLayout>

    <!-- A ChannelGridView (dkplayer_layout_channel_grid.xml) será inflada e gerenciada
         pelo StandardVideoController/ChannelGridView.java e adicionada sobre este FrameLayout
         quando o usuário pressionar "OK". Não precisa estar definida estaticamente aqui. -->

</FrameLayout>
