<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".TvFragment">

    <!-- Barra superior com título UniTV -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#2A2A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UniTV"
            android:textColor="#FF6B35"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Ícones da barra superior -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/share_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@android:drawable/ic_menu_share"
                android:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/help_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@android:drawable/ic_menu_help"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/quality_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="480P"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="#333333"
                android:padding="4dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/btn_star"
                android:tint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <!-- Campo de busca -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Pesquisa por canal."
        app:endIconDrawable="@android:drawable/ic_menu_search"
        app:endIconMode="custom"
        app:boxStrokeColor="#555555"
        app:hintTextColor="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Layout principal com categorias e canais -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_input_layout">

        <!-- Lista de categorias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_categories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2A2A2A"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Divisor vertical -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#555555" />

        <!-- Lista de canais -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_channels"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#1A1A1A"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_channel" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

